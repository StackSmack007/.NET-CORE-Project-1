@model Junjuria.App.ViewModels.Products.ProductMinorOutDto
<div class="col col-xl-2 col-lg-3 col-md-4 col-sm-5 col-6 mt-2 mx-0 px-4 prct-box">
    <a class="text-decoration-none" asp-action="Details" asp-route-id="@Model.Id">
        <div class="d-inline-block">
            @if (!Model.IsAvailable)
            {
                <h4 class="flt-l text-danger">@Model.Name</h4>
            }
            else
            {
                <h4 class="flt-l text-success">@Model.Name</h4>
            }
        </div>

                <img class="w-75 mx-2" src="@Model.MainPicURL" alt="Model Picture" />


            <div class="row">
                <div class="pl-4">
                    <h6 class="text-dark"><span class="text-info">Category: </span> @Model.CategoryTitle</h6>
                </div>
            </div>
            <div class="row">
                <div class="pl-4">
                    <h6 class="text-dark"><span class="text-info">Manufacturer: </span> @Model.ManufacturerName</h6>
                </div>
            </div>
            @if (Model.Grade != Junjuria.Infrastructure.Models.Enumerations.Grade.NotRated)
            {
                <div class="row justify-content-between  mx-0 px-0">
                    <div class="col-5">
                        <h6><span class="text-warning">Rated: </span>@Model.Grade.ToString()</h6>
                    </div>
                    <div class="col-7 d-flex align-items-start">
                        <div class="row d-flex align-items-start">
                            <div class="col-12 px-0">
                                @for (int i = 0; i < (int)Model.Grade; i++)
                                {
                                    <img src="~/img/yellowStar.png" class="mx-0 px-0" width="16" alt="grade+" />
                                }
                                @for (int i = 0; i < 6 - (int)Model.Grade; i++)
                                {
                                    <img src="~/img/grayStar.png" class="w-20" width="16" alt="grade-" />
                                }
                            </div>
                            <div class="col-12 flt-l">
                                <h6>  <span class="text-primary"> <i class="fas fa-comments "></i> @Model.ComentsCount</span></h6>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div>
                    <h6 class="text-secondary flt-l pl-2 ml-1"><em>Not rated yet!</em> &nbsp; &nbsp;  <span class="text-primary"> <i class="fas fa-comments"></i> @Model.ComentsCount </span> </h6><br />
                </div>
            }
            <div>

            </div>
            <center style="clear:left">
                @if (Model.Discount > 0)
                {
                    <h5 class=" col-12 text-success"><span class="text-danger"><del>@Model.Price.ToString("F2")</del></span> &nbsp;(-@((100 * Model.Discount).ToString("F0"))%)</h5>
                    <h5 class=" col-12 text-success  font-weight-bold">@((Model.Price * (1m - (decimal)Model.Discount)).ToString("F2")) $</h5>
                }
                else
                {
                    <h5 class="text-success font-weight-bold">@(Model.Price.ToString("F2")) $</h5>
                }
            </center>
</a>
</div>