@model IList<string>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count(); i++)
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i == 1 ? "active" : "")"></li>
        }
    </ol>
    <div class="carousel-inner">

        @for (int i = 0; i < Model.Count(); i++)
        {
            <div class="carousel-item @(i == 1 ? "active" : "") } ">
                <a href="@Model[i]" target="_blank"><img class="d-block w-100" src="@Model[i]" alt="@(i + 1) picture of product"></a>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next pr-4 mr-4" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>