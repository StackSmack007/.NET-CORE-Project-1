@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<div class="d-flex justify-content-center py-1">
    <h1><i class="fas fa-user-cog"></i> &nbsp; @ViewData["Title"]</h1>
</div>
<hr class="hr-jun w-50" />

<center>
    <div class="w-75 justify-content-center">
        <div class="w-50 justify-content-center">
            <h4><em>Enter your email. </em></h4>
            <hr class="hr-jun" />
            <section>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" required placeholder="Address..." />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </section>
        </div>
    </div>
</center>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
