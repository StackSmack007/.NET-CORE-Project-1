@page
@model IndexModel
@{
    ViewData["Title"] = "Profile information";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="d-flex justify-content-center py-1">
    <h1><i class="fas fa-user-cog"></i> &nbsp; @ViewData["Title"]</h1>
</div>
<hr class="hr-jun w-50" />

<center>
    <div class="w-75 justify-content-center">
        <div class="w-50 justify-content-center">
            <h4><em>Edit or View your profile Data</em></h4>
            <hr class="hr-jun" />
            <section>
                <form id="profile-form" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group col-5  font-weight-bold">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control text-center font-weight-bold" disabled />
                    </div>
                    <div class="row justify-content-between  font-weight-bold">
                        <div class="form-group col-5">
                            <label asp-for="Input.Email"></label>
                            <input type="email" asp-for="Input.Email" class="form-control" required />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-5">
                            <label asp-for="Input.Address"></label>
                            <input asp-for="Input.Address" class="form-control" required />
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group col-5">
                            <label asp-for="Input.Town"></label>
                            <input asp-for="Input.Town" class="form-control" required />
                            <span asp-validation-for="Input.Town" class="text-danger"></span>
                        </div>
                        <div class="form-group col-5">
                            <label asp-for="Input.FirstName"></label>
                            <input asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-5">
                            <label asp-for="Input.LastName"></label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-5">
                            <label asp-for="Input.PhoneNumber"></label>
                            <input type="tel" asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <button id="update-profile-button" type="submit" class="btn btn-success mt-4">Save Changes</button>
                </form>
            </section>
        </div>
    </div>
</center>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}