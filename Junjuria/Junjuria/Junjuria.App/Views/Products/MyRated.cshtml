@model ICollection<MyRatedProductDto>

@{
    ViewData["Title"] = "Rated Products";
    int i = 0;
}

<div class="d-flex justify-content-center pt-2">
    <h1 class="m-0"><i class="fas fa-star-half-alt"></i> &nbsp;My @ViewData["Title"]</h1>
</div>
<hr class="hr-jun w-50 my-2" />

<center>
    <div class="w-50 pt-4 mt-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Total Rating</th>
                    <th scope="col">My Rating</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                <tr>
                    <th scope="row">@(++i)</th>
                    <td><a asp-action="Details" asp-route-id="@product.Id">@product.Name</a></td>
                    <td>@product.DiscountedPrice.ToString("F2") $</td>
                    <td>(@((int)(product.GradeTotal))) @product.GradeTotal</td>
                    <td>(@((int)(product.MyGrade))) @product.MyGrade</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</center>